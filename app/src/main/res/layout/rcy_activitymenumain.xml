<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#a6ed8e"
    android:id="@+id/toobar"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Cơm Xào Bò"
            android:lines="1"
            android:minLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/img_Logo_Menu"
            android:id="@+id/txt_nameMonAn_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            />
        <TextView

            android:id="@+id/giatien"
            android:layout_below="@id/txt_nameMonAn_Menu"
            android:layout_toRightOf="@id/img_Logo_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền :"
            android:textSize="14sp"
            android:padding="16dp"
            />
        <TextView
            android:lines="1"
            android:minLines="1"
            android:ellipsize="end"
            android:id="@+id/txt_giatien_Menu"
            android:layout_below="@id/txt_nameMonAn_Menu"
            android:layout_toRightOf="@id/giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.000"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:id="@+id/img_Logo_Menu"
            android:layout_alignParentLeft="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>