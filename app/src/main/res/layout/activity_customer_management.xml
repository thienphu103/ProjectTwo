<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerManagement">
    <include
        layout="@layout/toobar_customermanagement"
        android:id="@+id/toobar_customermanagement"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:id="@+id/LnL_listview_customermanagementMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_below="@+id/toobar_customermanagement"
        >
        <TextView
            android:gravity="left"
            android:id="@+id/txt_soghe_customermanagementMain"
            android:text="Bàn số"
            android:textStyle="italic"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="left"
            android:id="@+id/txt_name_customermanagementMain"
            android:text="Tên Khách hàng"
            android:textStyle="italic"
            android:textSize="13sp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="right"
            android:id="@+id/txt_trangthai_customermanagementMain"
            android:text="Trạng thái"
            android:textStyle="italic"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:layout_below="@id/LnL_listview_customermanagementMain"
        android:id="@+id/lst_customer_customermanagementMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>